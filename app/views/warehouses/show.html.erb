<div class="container mt-3 mb-5">
  <h2><%= @warehouse.name %></h2>

  <div class="edit">
    <%= link_to edit_warehouse_path(@warehouse) do %>
      <i class="far fa-edit"></i>
    <% end %>
    <%= link_to warehouse_path(@warehouse), method: :delete, data: { confirm: "Are you sure you want to delete #{@warehouse.name}?"} do %>
      <i class="fas fa-trash"></i>
    <% end %>
  </div>

  <h3>Address</h3>
  <p><%= @warehouse.street_address%></p>
  <p><%= @warehouse.city%></p>
  <p><%= @warehouse.postal_code%></p>
  <p><%= @warehouse.country%></p>
  <%= cl_image_tag @warehouse.photo.key, height: 300, width: 400, crop: :fill %>
  <br>
  <br>
  <h3>Items</h3>
  <% @warehouse.items.each do |item| %>
    <%= link_to item_path(item) do %>
      <div class="card-product">
        <%= cl_image_tag item.photo.key %>
        <div class="card-product-infos">
          <h2><%= item.name %></h2>
          <p>In Stock: <%= item.quantity %></p>
          <p><%= item.description %></p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
